<h1>Seach Results</h1>
<h2>for "<%=params[:address]%>" finding a total of <%= @listings.total_entries %> results</h2>
<%= will_paginate(@listings, :params => {:address => params['address'] }) %>
<% @listings.each do |listing| %>
	<div class='search-result-item'>
		<h2>Listing ID: <%= listing.LN %></h2>
		<h3>Listing Price: <%= number_to_currency(listing.LP, :precision => 0) %></h3>
		<p><strong><%= listing.full_address %></strong></p>
		<p><%= listing.RE1 + listing.RE2 + listing.RE3 %></p>
	</div>
<% end %>
<%= will_paginate(@listings, :params => { :address => params['address'] }) %>
<div class='clear'></div>
