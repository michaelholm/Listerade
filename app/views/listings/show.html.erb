
<div class='listing-item'>
	<div id='listingImg'>
		<%= gmaps("markers" => { "data" => @gmaps}, "map_options" => { "type" => "ROADMAP", "zoom" => 16, "auto_zoom" => false } ) %>
	</div>
	<h2>Listing ID: <%= @listing.LN %></h2>
	
	<h3>Listing Price: <%= number_to_currency(@listing.LP, :precision => 0) %></h3>
	<p><strong><%= "#{@listing.HSN} #{@listing.CP} #{@listing.STR} #{@listing.STREETSUFFIX}" %><br /><%= "#{@listing.CIT} #{@listing.STATE} #{@listing.ZP}" %></strong></p>
	<p><span class='listingLabel'>Bedrooms</span>:  <%= @listing.BR %></p>
	<p><span class='listingLabel'>Bathrooms</span>:  <%= @listing.BTH %></p>
	<p><span class='listingLabel'>Approx. SQ Footage</span>: <%= @listing.ASF %></p>
	<p>
		<span class='listingLabel'>Description</span>:<br />
		<%= @listing.REMARKS %>
	</p>
</div>

<div class='clear'></div>
<%= render :partial => "widgets/topreomarkets" %>