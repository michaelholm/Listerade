<div id="stylized" class="register-form">
	<h1>Edit Your Member Account</h1>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :multipart => true }) do |f| %>
	  <%#= devise_error_messages! %>
	
	  <label>Email
  	  <span class="small">Enter your email address</span></label>
	  <%= f.text_field :email %>
	
	  <label>First Name
	  <span class="small">Enter your first name</span></label>
	  <%= f.text_field :first_name %>
	
	  <label>Last Name
	  <span class="small">Enter your last name</span></label>
	  <%= f.text_field :last_name %>
	
	  <label>Password
	  <span class="small">Enter to change your password<br /></span></label>
	  <%= f.password_field :password %>
	
	  <label>Password
	  <span class="small">Confirm if changing your password</span></label>
	  <%= f.password_field :password_confirmation %>
	
	  <label>Current Password
	  <span class="small">To save your changes</span></label>
	  <%= f.password_field :current_password %>

	  <label>Address
	  <span class="small">Enter your address</span></label>
	  <%= f.text_field :addr %>
	  
	  <label>Address 2
	  <span class="small">Enter your address (line 2)</span></label>
	  <%= f.text_field :addr2 %>
	  
	  <label>City
	  <span class="small">Enter your city</span></label>
	  <%= f.text_field :city %>
	  
	  <label>State
	  <span class="small">Enter your state (two letter)</span></label>
	  <%= f.text_field :state %>
	  
	  <label>Zip code
	  <span class="small">Enter your zip code (5 digit)</span></label>
	  <%= f.text_field :zip %>
	  
	  <button type="submit">Sign-up</button>
  	  <div class="spacer"></div>
	
	<% end %>

	<h3>Cancel my account</h3>

	<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>

<%= link_to "Back", :back %>
